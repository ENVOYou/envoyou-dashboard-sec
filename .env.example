# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000/v1
NEXT_PUBLIC_APP_URL=http://localhost:3001

# Authentication
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_site_key

# Analytics (Optional for dashboard)
NEXT_PUBLIC_GA_ID=your_google_analytics_id

# Redis Cache (Upstash)
UPSTASH_REDIS_REST_URL=your_redis_url
UPSTASH_REDIS_REST_TOKEN=your_redis_token

# Production Environment Variables (set in Vercel)
# RECAPTCHA_SECRET_KEY=your_secret_key

# Staging Environment Protection
# Set these in your staging deployment to enable basic authentication
# STAGING_USERNAME=staging
# STAGING_PASSWORD=your_secure_password

# Environment Detection (for middleware)
# NEXT_PUBLIC_ENV=staging  # Set to 'staging' for staging deployments

# API Authentication for Staging
# These are used by the frontend to authenticate with the API in staging environments
NEXT_PUBLIC_STAGING_API_USER=staging_user
NEXT_PUBLIC_STAGING_API_PASS=staging_password